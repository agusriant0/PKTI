<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyBlue">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/crfy"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/desc"
            android:id="@+id/imageView2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:background="@android:drawable/edit_text"
            android:cursorVisible="true"
            android:fontFamily="@strings/DK Canoodle.otf"
            android:drawableTint="@android:color/transparent"
            android:hint="insert e-mail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwd"
            android:hint="insert password"
            android:background="@android:color/white"
            android:fontFamily="@strings/DK Canoodle.otf"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="243dp">

            <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_weight="1"
                android:elevation="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <Button
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSignup"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:shadowColor="@color/colorAccent"
                style="@android:style/Widget.Button"
                android:minWidth="64dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
